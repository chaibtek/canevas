{% extends "base.html.twig" %}


{% block title %}
	Page d'accueil du site
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			{% for ville in listeVilles %}
				<div class="col">

					<div class="card" style="width: 18rem;">
						<img class="card-img-top" src="{{ville.img}}" alt="{{ville.nom}}" width="500">
						<div class="card-body">
							<h5 class="card-title">{{ville.nom}}</h5>
							<p class="card-text">{{ville.codepostal}}</p>
							<a href="{{ path('vueVille',{id:ville.id,slug:ville.slug})}}" class="btn btn-primary">Plus d'informations</a>
						</div>
					</div>
				</div>

			{% endfor %}
		</div>

	</div>
{% endblock %}
